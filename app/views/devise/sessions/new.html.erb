<section class="w-1/2 p-10 mx-auto rounded-lg shadow-2xl bg-slate-400">

  <h2 class="py-5 text-2xl text-center">歡迎回來!</h2>
  
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <section class="flex flex-col items-center">
    <div class="py-5 form-control">
      <label class="input-group">
        <span><%= f.label :email , '信箱'%></span>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"input input-bordered"%>
      </label>
    </div>
    <div class="pt-5 form-control ">
      <label class="input-group">
        <span><%= f.label :password , '密碼' %></span>
        <%= f.password_field :password, autocomplete: "current-password" , class:"input input-bordered"%>
      </label>
        <span><%= link_to "忘記密碼了嗎?", new_password_path(resource_name) ,class:"ml-auto text-sm px-5"%></span>
    </div>

    <div class="flex flex-col items-center pt-5 ">
      <%= f.submit "登入" , class:"btn btn-wide "%>
      <p>還沒有帳號嗎？ <%= link_to "註冊", new_registration_path(resource_name), class:"text-orange-300" %></p>
    </div>
  
  
  </section>
  <% end %>



</section>
